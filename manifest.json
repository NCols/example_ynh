{
    "name": "YunoHost Exemple NCols",
    "id": "ncols_ynh",
    "packaging_format": 1,
    "description": {
        "en": "My 1st trial at app packaging.",
        "fr": "Mon premier essai de packaging d'app."
    },
    "url": "https://ncollig.net",
    "license": "free",
    "maintainer": {
        "name": "Nicolas Collignon",
        "email": "nicolas@ncollig.net",
        "url": "http://ncollig.net"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
		"type": "domain",
                "ask": {
                    "en": "Choose a domain name for ncols_ynh",
                    "fr": "Choisissez un nom de domaine pour ncols_ynh"
                },
                "example": "box.ncollig.net"
            },
            {
                "name": "path",
		"type": "path",
                "ask": {
                    "en": "Choose a path for ncols_ynh",
                    "fr": "Choisissez un chemin pour ncols_ynh"
                },
                "example": "/ncols",
                "default": "/ncols"
            },
            {
                "name": "admin",
		"type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "nicloos"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}
